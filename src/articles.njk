<h1>Articles</h1>
<section class="flex-column">
    {% for article in collections.articles | take(3) %}
        <article class="grid packed">
            <div data-cols="1">{{ article.date|yyyymmdd }}</div>
            <div data-cols@s="1" data-cols="2 4">
                <a href="{{ article.url }}">{{ article.data.title }}</a>
            </div>
        </article>
    {% endfor %}
</section>
